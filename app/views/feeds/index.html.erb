<div class="container">
  <h1>Feeds</h1>

  <h2>Add feed</h2>
  <%= render 'form', feed: @feed %>
  <ul>
    <% @feeds.each do |feed| %>
      <hr/>
      <%= link_to feed do %>
        <li>
          <%= image_tag feed.image unless feed.image.blank? %>
          <h2><%= feed %></h2>
          <p class="small"><%= feed.url %></p>
          <p><%= feed.description %></p>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>