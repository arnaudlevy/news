<div class="container">
  <h1>Feeds</h1>

  <h2>Add feed</h2>
  <%= render 'form', feed: @feed %>
  <ul>
    <% @feeds.each do |feed| %>
      <%= link_to feed do %>
        <li>
          <%= image_tag feed.image unless feed.image.blank? %>
          <h3><%= feed %></h3>
          <p><%= feed.description %></p>
          <hr/>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>